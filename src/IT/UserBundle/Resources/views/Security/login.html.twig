{% extends "ITUserBundle::layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <form action="{{ path("fos_user_security_check") }}" method="post"  class="bootstrap-admin-login-form">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <h1>{{ 'Authentification'|trans }}</h1>
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <div class="form-group">
            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="{{ 'security.login.username'|trans|escape }}">
        </div>                    
        <div class="form-group">
            <input class="form-control" type="password" id="password" name="_password" required="required" placeholder="{{ 'security.login.password'|trans|escape }}">
        </div>
        <div class="form-group">
            <label>
                <input type="checkbox" id="remember_me" name="_remember_me" value="on">
                {{ 'security.login.remember_me'|trans }}
            </label>
        </div>
        <button class="btn btn-lg btn-primary" type="submit"  id="_submit" name="_submit" >{{ 'security.login.submit'|trans }}</button>
    </form>
{% endblock fos_user_content %}